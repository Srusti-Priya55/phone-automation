{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",

    "lib": ["ES2022", "DOM"],

    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/mocha-framework",
      "@wdio/appium-service",
      "expect-webdriverio",
      "chai"
    ],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,

    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "wdio.conf.ts",
    "config/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts"
  ]
}
