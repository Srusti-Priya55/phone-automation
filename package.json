{
  "name": "mobile-automation",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "wdio": "wdio run ./wdio.conf.ts",
    "menu": "ts-node ./scripts/select-run.ts",
    "e2e:adb": "cross-env E2E_CHAIN=1 OPEN_ALLURE=1 wdio run ./wdio.conf.ts --spec ./test/specs/E2E-adb.e2e.ts",
    "e2e:play": "cross-env E2E_CHAIN=1 OPEN_ALLURE=1 wdio run ./wdio.conf.ts --spec ./test/specs/E2E-play.e2e.ts",
    "allure:clean": "rimraf allure-results allure-report || rd /s /q allure-results allure-report",
    "allure:build": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/node": "^20.14.10",
    "@types/prompts": "^2.4.9",
    "@wdio/allure-reporter": "^9.19.2",
    "@wdio/appium-service": "^9.19.2",
    "@wdio/cli": "^9.19.2",
    "@wdio/local-runner": "^9.19.2",
    "@wdio/mocha-framework": "^9.19.2",
    "@wdio/spec-reporter": "^9.19.2",
    "allure-commandline": "^2.34.1",
    "allure-js-commons": "^3.4.1",
    "appium": "^3.0.2",
    "appium-uiautomator2-driver": "^5.0.1",
    "chai": "^6.0.1",
    "expect-webdriverio": "^5.4.2",
    "prompts": "^2.4.2",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "webdriverio": "^9.19.2",
    "cross-env": "^7.0.3"
  }
}
